<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom|center"
    android:orientation="vertical"
    tools:context="nimoniks.handyman.activities.DashBoardActivity">

    <!--++MAP++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->
    <LinearLayout
        android:id="@+id/ll_map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:visibility="gone">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <fragment
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="nimoniks.handyman.activities.DashBoardActivity" />

            <LinearLayout
                android:id="@+id/ll_search_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center"
                android:layout_margin="20dp"
                android:background="@color/hm_bg"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                android:translationZ="50dp">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/findHMWrapper"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColorHint="@color/hm_yellow">

                    <MultiAutoCompleteTextView
                        android:id="@+id/findHMEditText"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginRight="5dp"
                        android:drawableLeft="@mipmap/search_hilite"
                        android:drawablePadding="22dp"
                        android:hint="Find ..."
                        android:imeOptions="actionSearch"
                        android:inputType="textAutoCorrect|textCapWords|textCapSentences|textCapCharacters"
                        android:paddingLeft="10dp"
                        android:singleLine="true"
                        android:textColor="@color/white" />

                </android.support.design.widget.TextInputLayout>

                <ImageView
                    android:id="@+id/tv_dropdown_handyman"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingLeft="3dp"
                    android:src="@drawable/ic_chevron_white_48dp" />

            </LinearLayout>


        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:background="@mipmap/menu_banner"
            android:elevation="12dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:src="@mipmap/logo_banner" />
        </LinearLayout>

    </LinearLayout>

    <!--++FAVORITE++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->
    <LinearLayout
        android:id="@+id/ll_favorite"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:background="@mipmap/menu_banner"
            android:elevation="12dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="menu"
                android:src="@drawable/icon_menu"
                android:visibility="gone" />

            <ImageView
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:src="@mipmap/logo_banner" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="50dp">

                <fragment
                    android:id="@+id/map2"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:context="nimoniks.handyman.activities.DashBoardActivity" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fadeScrollbars="false"
                    android:fillViewport="true"
                    android:paddingBottom="10dp"
                    android:scrollbarThumbVertical="@color/grey">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="19dp"
                        android:layout_marginRight="19dp"
                        android:layout_marginTop="12dp"
                        android:orientation="vertical">

                        <include layout="@layout/fragment_favorites_selector" />

                        <include layout="@layout/fragment_favorites_selector" />

                        <include layout="@layout/fragment_favorites_selector" />

                        <include layout="@layout/fragment_favorites_selector" />

                        <include layout="@layout/fragment_favorites_selector" />

                        <include layout="@layout/fragment_favorites_selector" />

                        <include layout="@layout/fragment_favorites_selector" />

                        <include layout="@layout/fragment_favorites_selector" />

                        <include layout="@layout/fragment_favorites_selector" />

                        <include layout="@layout/fragment_favorites_selector" />

                    </LinearLayout>
                </ScrollView>

            </FrameLayout>
        </LinearLayout>
        <!---->
    </LinearLayout>

    <!--++PROFILE++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->
    <LinearLayout
        android:id="@+id/ll_profile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/whitesmoke"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:background="@mipmap/menu_banner"
            android:elevation="12dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="menu"
                android:src="@drawable/icon_menu"
                android:visibility="gone" />

            <ImageView
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:src="@mipmap/logo_banner" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="50dp">

                <fragment
                    android:id="@+id/map3"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:context="nimoniks.handyman.activities.DashBoardActivity" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="19dp"
                    android:layout_marginRight="19dp"
                    android:layout_marginTop="12dp"
                    android:background="@color/hm_bg"
                    android:backgroundTint="#41393a"
                    android:orientation="vertical">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/user_image"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/profile_grey"
                        android:padding="2dp"
                        android:src="@drawable/profileicon" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp">

                        <!--DETAILS-->
                        <TextView
                            android:id="@+id/tv_edit_details"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableRight="@mipmap/ic_mode_edit_white_48dp"
                            android:gravity="left|bottom"
                            android:text="DETAILS"
                            android:textColor="@color/hm_yellow"
                            android:textSize="15dp"
                            android:textStyle="bold|italic" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.9dp"
                            android:background="@color/hm_yellow" />

                        <!--Address-->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:drawableLeft="@mipmap/user"
                            android:drawablePadding="15dp"
                            android:fontFamily=""
                            android:gravity="left"
                            android:text="Iyare Diagboya"
                            android:textColor="@color/white"
                            android:textSize="14dp"
                            android:textStyle="bold" />

                        <!--Address-->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:drawableLeft="@mipmap/location"
                            android:drawablePadding="15dp"
                            android:gravity="left"
                            android:text="#2, Chevron Drive, Lekki-Epe Express way, Lagos"
                            android:textColor="@color/white"
                            android:textSize="14dp"
                            android:textStyle="bold" />

                        <!--Phone/SMS-->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:drawableLeft="@mipmap/phone"
                            android:drawablePadding="15dp"
                            android:gravity="left"
                            android:text="+234-803-850-4799"
                            android:textColor="@color/white"
                            android:textSize="14dp"
                            android:textStyle="bold" />

                        <!--Whatsapp/SMS-->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:drawableLeft="@mipmap/whatsapp"
                            android:drawablePadding="15dp"
                            android:gravity="left"
                            android:text="+234-701-887-1133"
                            android:textColor="@color/white"
                            android:textSize="14dp"
                            android:textStyle="bold" />

                        <!--Email-->
                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:drawableLeft="@mipmap/email"
                            android:drawablePadding="15dp"
                            android:gravity="left"
                            android:text="nimoniks@gmail.com"
                            android:textColor="@color/white"
                            android:textSize="14dp"
                            android:textStyle="bold" />

                        <!--My Portfolio-->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableRight="@mipmap/ic_add_white_36dp"
                            android:gravity="left|bottom"
                            android:text="SKILLS"
                            android:textColor="@color/hm_yellow"
                            android:textSize="15dp"
                            android:textStyle="bold|italic" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.9dp"
                            android:background="@color/hm_yellow" />

                    </LinearLayout>

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fadeScrollbars="false"
                        android:fillViewport="true"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:scrollbarThumbVertical="@color/grey">

                        <LinearLayout
                            android:id="@+id/ll_skills_list"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="20dp"
                            android:elevation="5dp"
                            android:orientation="vertical"
                            android:paddingLeft="13dp"
                            android:paddingRight="13dp"
                            android:visibility="visible">

                            <include
                                layout="@layout/fragment_profile_selector"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:visibility="visible" />

                        </LinearLayout>
                    </ScrollView>
                </LinearLayout>

                <Button
                    android:id="@+id/btn_add_portfolio"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="bottom|end"
                    android:layout_margin="22dp"
                    android:background="@drawable/btn_hm_yellow_circle"
                    android:elevation="50dp"
                    android:text="+"
                    android:textColor="@color/hm_bg"
                    android:textSize="33sp"
                    android:textStyle="normal"
                    android:typeface="monospace"
                    android:visibility="gone" />
            </FrameLayout>

        </LinearLayout>
    </LinearLayout>

    <!--++ABOUT++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->
    <LinearLayout
        android:id="@+id/ll_about"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/whitesmoke"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:background="@mipmap/menu_banner"
            android:elevation="12dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_menu2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_menu"
                android:visibility="gone" />

            <ImageView
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:src="@mipmap/logo_banner" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <fragment
                    android:id="@+id/map4"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:context="nimoniks.handyman.activities.DashBoardActivity" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_about"
                    android:elevation="50dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:scaleType="centerInside"
                        android:src="@mipmap/logo" />

                    <TextView
                        android:id="@+id/about_version"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="Version "
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:textStyle="italic" />

                    <ImageView
                        android:layout_width="111dp"
                        android:layout_height="33dp"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="22dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/dev_icon"
                        android:visibility="visible" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha="0.7"
                        android:gravity="center"
                        android:text="(c) 2017"
                        android:textColor="@color/grey"
                        android:textSize="10sp"
                        android:visibility="gone" />

                </LinearLayout>

            </FrameLayout>

        </LinearLayout>

    </LinearLayout>

    <!--++MENU++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@mipmap/menu_banner"
        android:orientation="horizontal">

        <Button
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:drawableTop="@mipmap/search"
            android:padding="5dp"
            android:text="Search"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="13dp" />

        <Button
            android:id="@+id/favorites"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:drawableTop="@mipmap/favorites"
            android:padding="5dp"
            android:text="Favorites"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="13dp" />

        <Button
            android:id="@+id/profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:drawableTop="@mipmap/profile"
            android:padding="5dp"
            android:text="My Profile"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="13dp" />

        <Button
            android:id="@+id/about"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:drawableTop="@mipmap/about"
            android:padding="5dp"
            android:text="About"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="13dp" />

    </LinearLayout>

</LinearLayout>
